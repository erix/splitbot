TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DATABASE_PATH=./data/splitbot.db
BACKUP_DIR=./data/backups
BACKUP_PREFIX=splitbot-ledger
BACKUP_KEEP=30
# Example:
# BACKUP_UPLOAD_CMD=aws s3 cp "$BACKUP_FILE" s3://your-bucket/splitbot/
# BACKUP_UPLOAD_CMD=rclone copy "$BACKUP_FILE" remote:splitbot/
BACKUP_UPLOAD_CMD=
# Used by Docker entrypoint. Set >0 (seconds) to enable periodic backups.
BACKUP_INTERVAL_SECONDS=0
# 1 = run one backup at container start when periodic backups are enabled
BACKUP_RUN_ON_START=1
NODE_ENV=development
PORT=3000
